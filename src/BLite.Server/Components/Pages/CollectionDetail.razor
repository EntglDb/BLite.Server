    private void LoadSchema()
    {
        try
        {
            _schemaInfo = Studio.GetSchema(DbId, DecodedCollection);
            _schemaTitle = _schemaInfo.Title ?? "";
            _schemaDraft = [.._schemaInfo.Fields];
        }
        catch
        {
            _schemaInfo = new(false, null, null, 0, []);
            _schemaDraft = [];
        }
    }

    private void AddSchemaField()
    {
        if (string.IsNullOrWhiteSpace(_newSchemaFieldName)) return;
        var name = _newSchemaFieldName.Trim();
        if (_schemaDraft.Any(f => f.Name.Equals(name, StringComparison.OrdinalIgnoreCase)))
            return;
        _schemaDraft.Add(new SchemaFieldInfo(name, (BsonType)_newSchemaFieldTypeInt, _newSchemaFieldNullable));
        _newSchemaFieldName = "";
        _newSchemaFieldNullable = true;
        StateHasChanged();
    }

    private void RemoveSchemaField(SchemaFieldInfo field)
    {
        _schemaDraft.Remove(field);
        StateHasChanged();
    }

    private async Task SaveSchema()
    {
        _message = "";
        _isError = false;
        try
        {
            await Studio.SetSchemaAsync(DbId, DecodedCollection, _schemaTitle, _schemaDraft);
            _message = $"Schema v{_schemaInfo.VersionCount + 1} saved ({_schemaDraft.Count} field{(_schemaDraft.Count == 1 ? "" : "s")}).";
            Refresh();
        }
        catch (Exception ex) { _message = ex.Message; _isError = true; }
    }

