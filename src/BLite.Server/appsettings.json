{
  "BLiteServer": {
    "DatabasePath": "blite.db",
    "MaxPageSizeBytes": 4096
  },
  "Auth": {
    // Set this to the root API key on first boot.
    // After the root user is persisted in _users, this value can be left empty
    // or removed â€” it is ignored if a root user already exists in the database.
    // Leave empty to run in open/dev mode (no authentication, all operations allowed).
    "RootKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "https://localhost:5051",
        "Protocols": "Http2"
      }
    }
  }
}
