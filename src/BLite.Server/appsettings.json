{
  "BLiteServer": {
    "DatabasePath": "blite.db",
    "MaxPageSizeBytes": 16384,
    "DatabasesDirectory": "data/tenants"
  },
  "License": {
    "SourceUrl": "https://github.com/EntglDb/BLite.Server"
  },
  "Studio": {
    "Enabled": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "https://*:2626",
        "Protocols": "Http2"
      },
      "Rest": {
        "Url": "https://*:2627",
        "Protocols": "Http1AndHttp2"
      },
      "Studio": {
        "Url": "https://*:2628",
        "Protocols": "Http1AndHttp2"
      }
    }
  },
  "Telemetry": {
    "Enabled": true,
    "ServiceName": "blite-server",
    "Console": null,
    "Otlp": {
      "Endpoint": "https://otel.blitedb.com"
    }
  },
  "Transactions": {
    "TimeoutSeconds": 60
  },
  "QueryCache": {
    "Enabled": true,
    "SlidingExpirationSeconds": 30,
    "AbsoluteExpirationSeconds": 300,
    "MaxSizeBytes": 67108864,
    "MaxResultSetSize": 500
  }
}
